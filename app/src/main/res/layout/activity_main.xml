<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Easy. Accurate. Reliable."
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:id="@+id/applineid"
        android:layout_below="@id/appnameid"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aqua Alert"
        android:textSize="30sp"
        android:textColor="@color/my_primary"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:id="@+id/appnameid"
        android:background="#1A3744"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/applineid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo1"
        android:scaleType="fitCenter"
        android:id="@+id/logo1id"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonlayout"
        android:orientation="horizontal"
        android:layout_below="@id/logo1id"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_primary"
            android:text="Model"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/logo1id"
            android:layout_centerHorizontal="true"
            android:id="@+id/modelid"
            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_primary"
            android:text="Github"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/modelid"
            android:layout_centerHorizontal="true"
            android:id="@+id/sourceid"
            ></Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="Report"
        android:id="@+id/reportid"
        android:layout_below="@id/buttonlayout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittextlayout"
            android:orientation="vertical"
            android:layout_below="@id/reportid"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:hint="Enter source"
                android:background="@drawable/text_background"
                android:id="@+id/placeid"></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:hint="Enter chemical"
                android:background="@drawable/text_background"
                android:id="@+id/chemicalid"
                android:layout_marginTop="10dp"></EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="SEND"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/saveid"></Button>
        </LinearLayout>
</RelativeLayout>